@if (Number < 18.6)
{
    <h4>Abaixo ⚠️</h4>
    <p>Você está abaixo do peso indicado, siga as recomendações do seu nutricionista</p>
}
else if (Number >= 18.6 && Number <= 24.9)
{
    <h4>Ideal ✅</h4>
}
else if (Number >= 24.9)
{
    <h4>Sobrepeso 🔴</h4>
}

@code {
    [EditorRequired]
    [Parameter]
    public double Number { get; set; }
}